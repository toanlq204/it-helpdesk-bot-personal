            "id": "kb001",
            "title": "Complete Password Reset Guide",
            "category": "Authentication",
            "tags": [
                "password",
                "reset",
                "login",
                "security",
                "account"
            ],
            "summary": "Step-by-step guide to reset passwords for various company systems",
            "content": {
                "overview": "This guide covers password reset procedures for all company systems including Windows login, Office 365, VPN, and other corporate applications.",
                "steps": [
                    {
                        "step": 1,
                        "title": "Access the IT Portal",
                        "description": "Navigate to portal.company.com using your web browser",
                        "screenshot": "portal_login.png"
                    },
                    {
                        "step": 2,
                        "title": "Click Password Reset",
                        "description": "Locate and click the 'Forgot Password' or 'Reset Password' button",
                        "screenshot": "password_reset_button.png"
                    },
                    {
                        "step": 3,
                        "title": "Enter Credentials",
                        "description": "Enter your username or email address associated with your account",
                        "notes": "Use your full email address if username doesn't work"
                    },
                    {
                        "step": 4,
                        "title": "Check Email",
                        "description": "Check your email for the reset link (may take 5-10 minutes)",
                        "troubleshooting": "Check spam folder if email doesn't arrive"
                    },
                    {
                        "step": 5,
                        "title": "Create New Password",
                        "description": "Click the email link and create a new password",
                        "requirements": {
                            "min_length": 8,
                            "required": [
                                "uppercase",
                                "lowercase",
                                "numbers",
                                "symbols"
                            ],
                            "forbidden": [
                                "previous_passwords",
                                "common_words",
                                "personal_info"
                            ]
                        }
                    }
                ],
                "common_issues": [
                    {
                        "issue": "Reset email not received",
                        "solutions": [
                            "Check spam/junk folder",
                            "Verify email address spelling",
                            "Contact IT if still no email after 30 minutes"
                        ]
                    },
                    {
                        "issue": "Password doesn't meet requirements",
                        "solutions": [
                            "Use at least 8 characters",
                            "Include uppercase and lowercase letters",
                            "Add numbers and special characters",
                            "Avoid dictionary words and personal information"
                        ]
                    }
                ]
            },
            "related_articles": [
                "kb007",
                "kb008"
            ],
            "estimated_time": "5-15 minutes",
            "difficulty": "Easy"
